dt=0
lasttime=0

p={
 x=3,y=5,sprite=240,
 ox=0,oy=0,color=10,
 cmds={},dir=false
}

function _init()
 _drw = draw_game
 _upd = update_game
 t=0
end

function _draw()
 _drw()
end

function _update60()
 dt=time()-lasttime
 lasttime=time()
 t+=1
 tick_crs()
 _upd()
end

