function add_cmd(cmd)
 if #p.cmds==0 then
  add_cr(cr_player_move)
 end
 p.cmds[#p.cmds+1]=cmd
end

function update_game()
 for i=0,3 do
  if btnp(i) then
   add_cmd(i+1)
  end
 end
end

cmds_dir={
 {-1,0},
 {1,0},
 {0,-1},
 {0,1}
}

function cr_player_move()
 while #p.cmds>0 do
  local o_x,o_y=cmds_dir[p.cmds[1]][1],cmds_dir[p.cmds[1]][2]
  p.dir=o_x<0
  for i=1,8 do
   p.ox+=o_x
   p.oy+=o_y
   yield()
  end
  del(p.cmds,p.cmds[1])
  p.x+=o_x
  p.y+=o_y
  p.ox=0
  p.oy=0
 end
end

function draw_game()
 cls(0)
 map()
 drw(p)
end
