function ani(_spr,l)
 return _spr+(t/8)%l
end

function drw(obj)
 palt(0,false)
 pal(6,obj.color)
 spr(ani(obj.sprite,4),obj.x*8+obj.ox,obj.y*8+obj.oy,1,1,obj.dir)
 pal()
end
